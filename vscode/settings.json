{
    // Vim Settings
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.insertModeKeyBindings": [
        { "before": [ "j", "k" ], "after": [ "<Esc>" ] }
    ],
    "vim.normalModeKeyBindings": [
        { "before": ["<leader>", "d"], "after": ["\"", "_", "d"] },
        { "before": ["<leader>", "c"], "after": ["\"", "_", "c"] },
        { "before": ["g", "l"], "after": ["g", "h"] },
        // Debug
        { "before": ["<leader>", "b", "r"], "commands": ["editor.debug.action.toggleBreakpoint"] },
        { "before": ["<leader>", "b", "c"], "commands": ["workbench.debug.viewlet.action.removeAllBreakpoints"] },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": ["<S-h>"], "commands": [":bprevious"] },
        { "before": ["<C-q>"], "commands": [":q"] },
        { "before": ["<S-l>"], "commands": [":bnext"] },
        { "before": ["<leader>", "s", "l"], "commands": [":vsplit"] },
        { "before": ["<leader>", "s", "j"], "commands": [":split"] },
        { "before": ["<leader>", "f", "i"], "commands": ["workbench.action.quickOpen"] },
        // Useful
        { "before": ["<leader>", "n"], "commands": [":noh"] },
        { "before": ["<leader>", "r", "e"], "commands": ["editor.action.rename"]},
        // Jump btw panels
        { "before": ["<C-l>"], "commands": ["workbench.action.focusLeftGroup"] },
        { "before": ["<C-h>"], "commands": ["workbench.action.focusRightGroup"] },
        { "before": ["<C-j>"], "commands": ["workbench.action.focusBelowGroup"] },
        { "before": ["<C-k>"], "commands": ["workbench.action.focusAboveGroup"] },
    ],
    "vim.visualModeKeyBindings": [
        { "before": ["<leader>", "d"], "after": ["\"", "_", "d"] },
        { "before": ["<leader>", "c"], "after": ["\"", "_", "c"] },
        { "before": ["<"], "commands": ["editor.action.outdentLines"] },
        { "before": [">"], "commands": ["editor.action.indentLines"] },
        { "before": ["<S-k>"], "commands": ["editor.action.moveLinesUpAction"] },
        { "before": ["<S-j>"], "commands": ["editor.action.moveLinesDownAction"] },
        { "before": ["p"], "commands": ["editor.action.clipboardPasteAction"] },
    ],
    "vim.handleKeys": {
        "<C-a>": true,
        "<C-f>": false,
        "<C-h>": true,
    },

    // Editor Settings
    // "editor.rulers": [90, 90],
    "editor.lineNumbers": "relative",
    "editor.smoothScrolling": false,
    "editor.mouseWheelZoom": true,
    "editor.fontFamily": "Hack Nerd Font Mono",
    "editor.scrollbar.vertical": "visible",
    "editor.scrollbar.horizontal": "visible",
    "editor.fontSize": 17,
    "editor.parameterHints.cycle": true,
    "editor.inlayHints.enabled": "off",
    "editor.minimap.maxColumn": 80,
    "editor.stickyScroll.enabled": false,
    "editor.bracketPairColorization.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.minimap.enabled": false,
    "editor.fontLigatures": true,
    "breadcrumbs.enabled": false,

    // Workbench
    "workbench.layoutControl.enabled": false,
    "workbench.editor.empty.hint": "hidden",
    "workbench.editor.enablePreview": false,
    "workbench.editor.autoLockGroups": {
        "workbench.editor.chatSession": false
    },
 
    // Cmake
    "cmake.configureOnOpen": false,
    "cmake.buildDirectory": "${workspaceFolder}/bin",
    "cmake.debugConfig": {
        "console": "externalTerminal"
    },

    // Dotnet
    "dotnet.codeLens.enableReferencesCodeLens": false,
    "dotnetAcquisitionExtension.enableTelemetry": false,

    // GLSL
    "glsl-analyzer.path": "c:\\Users\\Ewan_\\AppData\\Roaming\\Code\\User\\globalStorage\\nolanderc.glsl-analyzer\\glsl_analyzer_install\\bin\\glsl_analyzer.exe",

    // AI
    "C_Cpp.copilotHover": "disabled",
    "chat.notifyWindowOnConfirmation": false,
    "chat.commandCenter.enabled": false,
    "chat.agent.enabled": false,

    "git.openRepositoryInParentFolders": "never",
    "telemetry.feedback.enabled": false,
    "window.commandCenter": false,
    "explorer.confirmDelete": false,
    "workbench.iconTheme": "vscode-jetbrains-icon-theme-2023-auto",
    "explorer.confirmDragAndDrop": false,

    // Color Scheme
    "workbench.colorCustomizations": {
		"actionBar.toggledBackground": "#383a49",
		"activityBar.activeBorder": "#0078d4",
		"activityBar.background": "#181818",
		"activityBar.border": "#2b2b2b",
		"activityBar.foreground": "#d7d7d7",
		"activityBar.inactiveForeground": "#868686",
		"badge.background": "#616161",
		"badge.foreground": "#f8f8f8",
		"button.background": "#0078d4",
		"button.border": "#ffffff12",
		"button.foreground": "#ffffff",
		"button.hoverBackground": "#026ec1",
		"button.secondaryBackground": "#313131",
		"button.secondaryForeground": "#cccccc",
		"button.secondaryHoverBackground": "#3c3c3c",
		"checkbox.background": "#313131",
		"checkbox.border": "#3c3c3c",
		"debugToolBar.background": "#181818",
		"descriptionForeground": "#9d9d9d",
		"dropdown.background": "#313131",
		"dropdown.border": "#3c3c3c",
		"dropdown.foreground": "#cccccc",
		"dropdown.listBackground": "#1f1f1f",
		"editorGroup.border": "#ffffff17",
		"editorGroupHeader.tabsBackground": "#181818",
		"sideBar.background": "#181818",
		"sideBar.border": "#2b2b2b",
		"statusBar.background": "#181818",
		"statusBar.border": "#2b2b2b",
		"statusBar.debuggingBackground": "#0078d4",
		"statusBar.debuggingForeground": "#ffffff",
		"statusBar.focusBorder": "#0078d4",
		"statusBar.foreground": "#cccccc",
		"statusBar.noFolderBackground": "#1f1f1f",
		"tab.activeBackground": "#1f1f1f",
		"tab.activeBorder": "#1f1f1f",
		"tab.activeBorderTop": "#0078d4",
		"tab.activeForeground": "#ffffff",
		"tab.border": "#2b2b2b",
		"tab.hoverBackground": "#1f1f1f",
		"tab.inactiveBackground": "#181818",
		"tab.inactiveForeground": "#9d9d9d",
		"tab.lastPinnedBorder": "#cccccc33",
		"tab.selectedBackground": "#222222",
		"tab.selectedBorderTop": "#6caddf",
		"tab.selectedForeground": "#ffffffa0",
		"tab.unfocusedActiveBorder": "#1f1f1f",
		"tab.unfocusedActiveBorderTop": "#2b2b2b",
		"tab.unfocusedHoverBackground": "#1f1f1f",
		"textBlockQuote.background": "#2b2b2b",
		"textBlockQuote.border": "#616161",
		"textCodeBlock.background": "#2b2b2b",
		"textLink.activeForeground": "#4daafc",
		"textLink.foreground": "#4daafc",
		"textPreformat.background": "#3c3c3c",
		"textPreformat.foreground": "#d0d0d0",
		"textSeparator.foreground": "#21262d",
		"titleBar.activeBackground": "#181818",
		"titleBar.activeForeground": "#cccccc",
		"titleBar.border": "#2b2b2b",
		"titleBar.inactiveBackground": "#1f1f1f",
		"titleBar.inactiveForeground": "#9d9d9d",
		"welcomePage.progress.foreground": "#0078d4",
		"welcomePage.tileBackground": "#2b2b2b",
		"widget.border": "#313131",
    },
    "editor.semanticHighlighting.enabled": true,
    "editor.semanticTokenColorCustomizations": {
        "enabled": true,
        "rules": {
            // "keyword": "#d5564d",
            // "controlKeyword":"#cba3d7",
            // "macro": "#b06db7",
            "namespace": "#c0ccb9",
            "enumMember": "#936228",
            "number": "#a7cea8",

            // "class": "#efd630",
            // "struct": "#efd630",
            // "templateType": "#efd630",
            // "enum": "#efd630",
            // "type": "#efd630",
            // "typeParameter": "#efd630",

            "function": "#d37f2a",
            "method": "#d37f2a",
            "templateFunction": "#d37f2a",

            // "variable": "#b0b176",
            "parameter": "#b6a671",
            "property": "#cdce87",
            "field": "#c2c481",
        }
    },
    "workbench.colorTheme": "Visual assist color theme",
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "support.type.property-name",
                "settings": {
                    "foreground": "#b0b176",
                }
            },
            {
                "scope": [
                    "constant.language",
                    "keyword",
                    "keyword.operator.cast",
                    "storage.type",
                ],
                "settings": {
                    "foreground": "#d5564d"
                }
            },
        ]
    },
}
