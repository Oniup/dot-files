{
    // Vim Settings
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.insertModeKeyBindings": [
        { "before": [ "j", "k" ], "after": [ "<Esc>" ] }
    ],
    "vim.normalModeKeyBindings": [
        { "before": ["<leader>", "d"], "after": ["\"", "_", "d"] },
        { "before": ["<leader>", "c"], "after": ["\"", "_", "c"] },
        { "before": ["g", "l"], "after": ["g", "h"] },
        // Debug
        { "before": ["<leader>", "b", "r"], "commands": ["editor.debug.action.toggleBreakpoint"] },
        { "before": ["<leader>", "b", "c"], "commands": ["workbench.debug.viewlet.action.removeAllBreakpoints"] },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": ["<S-h>"], "commands": [":bprevious"] },
        { "before": ["<C-q>"], "commands": [":q"] },
        { "before": ["<S-l>"], "commands": [":bnext"] },
        { "before": ["<leader>", "s", "l"], "commands": [":vsplit"] },
        { "before": ["<leader>", "s", "j"], "commands": [":split"] },
        { "before": ["<leader>", "f", "i"], "commands": ["workbench.action.quickOpen"] },
        // Useful
        { "before": ["<leader>", "n"], "commands": [":noh"] },
        { "before": ["<leader>", "r", "e"], "commands": ["editor.action.rename"]},
        // Jump btw panels
        { "before": ["<C-l>"], "commands": ["workbench.action.focusLeftGroup"] },
        { "before": ["<C-h>"], "commands": ["workbench.action.focusRightGroup"] },
        { "before": ["<C-j>"], "commands": ["workbench.action.focusBelowGroup"] },
        { "before": ["<C-k>"], "commands": ["workbench.action.focusAboveGroup"] },
    ],
    "vim.visualModeKeyBindings": [
        { "before": ["<leader>", "d"], "after": ["\"", "_", "d"] },
        { "before": ["<leader>", "c"], "after": ["\"", "_", "c"] },
        { "before": ["<"], "commands": ["editor.action.outdentLines"] },
        { "before": [">"], "commands": ["editor.action.indentLines"] },
        { "before": ["<S-k>"], "commands": ["editor.action.moveLinesUpAction"] },
        { "before": ["<S-j>"], "commands": ["editor.action.moveLinesDownAction"] },
        { "before": ["p"], "commands": ["editor.action.clipboardPasteAction"] },
    ],
    "vim.handleKeys": {
        "<C-a>": true,
        "<C-f>": false,
        "<C-h>": true,
    },

    // Editor Settings
    // "editor.rulers": [90, 90],
    "editor.lineNumbers": "relative",
    "editor.smoothScrolling": false,
    "editor.mouseWheelZoom": true,
    "editor.fontFamily": "Hack Nerd Font Mono",
    "editor.scrollbar.vertical": "visible",
    "editor.scrollbar.horizontal": "visible",
    "editor.fontSize": 17,
    "editor.parameterHints.cycle": true,
    "editor.inlayHints.enabled": "off",
    "editor.minimap.maxColumn": 80,
    "editor.stickyScroll.enabled": false,
    "editor.bracketPairColorization.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.minimap.enabled": false,
    "editor.fontLigatures": true,
    "breadcrumbs.enabled": false,

    // Workbench
    "workbench.layoutControl.enabled": false,
    "workbench.editor.empty.hint": "hidden",
    "workbench.editor.enablePreview": false,
    "workbench.editor.autoLockGroups": {
        "workbench.editor.chatSession": false
    },
 
    // Cmake
    "cmake.configureOnOpen": false,
    "cmake.buildDirectory": "${workspaceFolder}/bin",
    "cmake.debugConfig": {
        "console": "externalTerminal"
    },

    // Dotnet
    "dotnet.codeLens.enableReferencesCodeLens": false,
    "dotnetAcquisitionExtension.enableTelemetry": false,

    // GLSL
    "glsl-analyzer.path": "c:\\Users\\Ewan_\\AppData\\Roaming\\Code\\User\\globalStorage\\nolanderc.glsl-analyzer\\glsl_analyzer_install\\bin\\glsl_analyzer.exe",

    // AI
    "C_Cpp.copilotHover": "disabled",
    "chat.notifyWindowOnConfirmation": false,
    "chat.commandCenter.enabled": false,
    "chat.agent.enabled": false,

    "git.openRepositoryInParentFolders": "never",
    "telemetry.feedback.enabled": false,
    "window.commandCenter": false,
    "explorer.confirmDelete": false,
    "workbench.iconTheme": "vscode-jetbrains-icon-theme-2023-auto",
    "explorer.confirmDragAndDrop": false,

    // Color Scheme
    "editor.semanticHighlighting.enabled": true,
    "editor.semanticTokenColorCustomizations": {
        "enabled": true,
        "rules": {
            "keyword": "#d5564d",
            "controlKeyword":"#cba3d7",
            "macro": "#b06db7",
            "namespace": "#c0ccb9",
            "enumMember": "#936228",

            "class": "#efd630",
            "struct": "#efd630",
            "templateType": "#efd630",
            "enum": "#efd630",
            "type": "#efd630",

            "function": "#d37f2a",
            "method": "#d37f2a",
            "templateFunction": "#d37f2a",

            "variable": "#b0b176",
            "parameter": "#b6a671",
            "property": "#cdce87",
            "field": "#cdce87",
        }
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "storage.modifier",
                "settings": {
                    "foreground": "#CCCCCC",
                }
            },
            {
                "scope": "support.type.property-name",
                "settings": {
                    "foreground": "#b0b176",
                }
            },
            {
                "scope": "variable",
                "settings": {
                    "foreground": "#b0b176",
                }
            },
            {
                "scope": "entity.name.function.preprocessor",
                "settings": {
                    "foreground": "#b06db7",
                }
            },
            {
                "scope": [
                    "constant.language",
                    "keyword",
                    "keyword.operator.cast",
                    "storage.type",
                ],
                "settings": {
                    "foreground": "#d5564d"
                }
            },
        ]
    }
}
